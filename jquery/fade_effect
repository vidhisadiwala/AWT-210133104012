<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#fade1").click(function(){
    $("#div1").fadeIn();
    $("#div2").fadeIn("slow");
    $("#div3").fadeIn(3000);
  });

  $("#fade2").click(function(){
    $("#div1").fadeOut();
    $("#div2").fadeOut("slow");
    $("#div3").fadeOut(3000);
  });

  $("#fade3").click(function(){
    $("#div1").fadeToggle();
    $("#div2").fadeToggle("slow");
    $("#div3").fadeToggle(3000);
  });

  $("#fade4").click(function(){
    $("#div1").fadeTo("slow", 0.12);
    $("#div2").fadeTo("slow", 0.8);
    $("#div3").fadeTo("slow", 0.10);
  });

});
</script>
<style>
  #div1
  {
    background-color: red;
    height: 100px;
    width: 100px;
    display: none;
    border: 2px solid black;
    border-radius: 50px;
    margin-left: 20px;
  }
  #div2
  {
    background-color: orange;
    height: 100px;
    width: 100px;
    display: none;
    border: 2px solid black;
    border-radius: 50px;
    margin-left: 20px;
  }
  #div3
  {
    background-color: green;
    height: 100px;
    width: 100px;
    border-radius: 50px;s
    transform: rotate(45deg);
    display: none;
    border: 2px solid black;
    margin-left: 20px;
    
  }
</style>
</head>
<body>



<button id="fade1">Click to fade in boxes</button><br><br>
<button id="fade2">Click to fade out boxes</button><br><br>
<button id="fade3">Click to fade in/out boxes</button><br><br>
<button id="fade4">Click to fade boxes</button><br><br>


<div id="div1"></div><br>
<div id="div2"></div><br><br>
<div id="div3"></div>

</body>
</html>
